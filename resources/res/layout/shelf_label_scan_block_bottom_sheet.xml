<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/shelf_label_scan_block_bottom_sheet_0"
    android:background="@color/sng_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/anchor_view"
        android:paddingTop="@dimen/sng_spacing_extra_large"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/textview_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textview_title"
        app:layout_constraintVertical_bias="0.8"/>
    <TextView
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#469c46"
        android:gravity="center"
        android:id="@+id/textview_title"
        android:paddingTop="@dimen/sng_spacing_extra_large"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/sng_label_shelf_barcode_scanned_blocked_title"
        android:includeFontPadding="false"
        android:lineSpacingExtra="-4dp"
        android:fontFamily="@font/freshsans_bold"
        android:textAlignment="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textview_body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:textSize="19sp"
        android:textStyle="normal"
        android:textColor="#275233"
        android:gravity="center"
        android:id="@+id/textview_body"
        android:paddingLeft="@dimen/sng_spacing_extra_large"
        android:paddingTop="@dimen/sng_general_spacing"
        android:paddingRight="@dimen/sng_spacing_extra_large"
        android:paddingBottom="@dimen/sng_spacing_extra_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/sng_label_shelf_barcode_scanned_blocked_msg"
        android:lineSpacingExtra="4sp"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
