<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.navigation.NavigationView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/NavigationView"
    android:layout_gravity="start"
    android:id="@+id/navigationView"
    android:tag="layout/layout_navigation_drawer_0"
    android:background="@android:color/white"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    app:headerLayout="@layout/view_header_drawer"
    app:itemBackground="@drawable/sng_nav_view_item_background"
    app:menu="@menu/sng_drawer_view">
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:paddingTop="@dimen/sng_medium_general_spacing"
        android:paddingBottom="@dimen/sng_medium_general_spacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/red1"
            android:id="@+id/logOutMenu"
            android:background="@color/sng_red_50"
            android:paddingLeft="@dimen/sng_general_spacing"
            android:paddingTop="@dimen/sng_medium_general_spacing"
            android:paddingRight="@dimen/sng_general_spacing"
            android:paddingBottom="@dimen/sng_medium_general_spacing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sng_label_sign_out"/>
        <TextView
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="@color/sng_color_secondary_dark"
            android:id="@+id/appVersion"
            android:paddingLeft="@dimen/sng_general_spacing"
            android:paddingTop="@dimen/sng_medium_general_spacing"
            android:paddingRight="@dimen/sng_general_spacing"
            android:paddingBottom="@dimen/sng_medium_general_spacing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</com.google.android.material.navigation.NavigationView>
