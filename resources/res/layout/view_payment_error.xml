<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:id="@+id/sectionError"
    android:tag="layout/view_payment_error_0"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/errorImageView"
        android:tag="binding_1"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentTop="true"
        android:importantForAccessibility="no"
        android:layout_alignParentStart="true"/>
    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/sng_checkout_error_title"
        android:gravity="center_vertical"
        android:id="@+id/txtErrorHeader"
        android:tag="binding_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/errorImageView"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/sng_checkout_error_title"
        android:gravity="center_vertical"
        android:id="@+id/txtErrorBody"
        android:tag="binding_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/txtErrorHeader"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
