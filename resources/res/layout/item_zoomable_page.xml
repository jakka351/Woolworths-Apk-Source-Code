<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/item_zoomable_page_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.otaliastudios.zoom.ZoomLayout
        android:id="@+id/zoom_layout"
        android:scrollbars="vertical|horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:hasClickableChildren="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxZoom="4"
        app:minZoom="1">
        <au.com.woolworths.feature.shop.recipes.freshmag.content.presentation.clickablerect.ClickableRectGroup
            android:id="@+id/clickable_rect_group"
            android:tag="binding_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:contentDescription="@null"/>
    </com.otaliastudios.zoom.ZoomLayout>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:tag="binding_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/retry_image_view"
        android:tag="binding_3"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:contentDescription="@string/retry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_refresh"
        app:tint="?attr/colorAccent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
