<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/epoxy_item_product_list_skeleton_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/skeleton_image"
        android:background="@color/color_black_50"
        android:layout_width="@dimen/product_list_image_size"
        android:layout_height="@dimen/product_list_image_size"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/skeleton_title"
        android:background="@drawable/background_skeleton_box"
        android:layout_width="140dp"
        android:layout_height="10dp"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginStart="@dimen/one_and_half_default_margin"
        app:layout_constraintStart_toEndOf="@+id/skeleton_image"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/skeleton_subtitle"
        android:background="@drawable/background_skeleton_box"
        android:layout_width="120dp"
        android:layout_height="10dp"
        android:layout_marginTop="@dimen/half_default_margin"
        app:layout_constraintStart_toStartOf="@+id/skeleton_title"
        app:layout_constraintTop_toBottomOf="@+id/skeleton_title"/>
    <View
        android:id="@+id/skeleton_price"
        android:background="@drawable/background_skeleton_box"
        android:layout_width="54dp"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/three_quarter_default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/skeleton_subtitle"
        app:layout_constraintTop_toBottomOf="@+id/skeleton_subtitle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
