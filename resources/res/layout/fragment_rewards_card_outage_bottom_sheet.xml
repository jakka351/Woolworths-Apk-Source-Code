<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_rewards_card_outage_bottom_sheet_0"
    android:paddingTop="@dimen/double_default_padding"
    android:paddingBottom="@dimen/triple_default_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/double_default_padding">
    <TextView
        android:textAppearance="@style/TextAppearance.H6.Fresh.Medium"
        android:gravity="center"
        android:id="@+id/rewards_card_outage_title"
        android:paddingTop="@dimen/one_and_half_padding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Subtitle2"
        android:gravity="center"
        android:id="@+id/rewards_card_outage_message"
        android:paddingTop="@dimen/half_default_padding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:breakStrategy="balanced"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rewards_card_outage_title"/>
    <Button
        android:id="@+id/primary_action_button"
        android:tag="binding_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:text="@string/rewards_card_outage_action_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rewards_card_outage_message"/>
</androidx.constraintlayout.widget.ConstraintLayout>
