<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_order_progress_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/default_margin"
    android:paddingVertical="@dimen/one_and_half_padding">
    <TextView
        android:textAppearance="@style/TextAppearance.H5.Fresh.Medium"
        android:ellipsize="end"
        android:id="@+id/current_step"
        android:tag="binding_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginEnd="8dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@+id/info_icon"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <au.com.woolworths.feature.shop.myorders.details.progressstepper.ProgressStepperContainer
        android:id="@+id/progress_stepper_container"
        android:tag="binding_2"
        android:layout_width="0dp"
        android:layout_height="@dimen/order_progress_bar_height"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_step"/>
    <ImageView
        android:id="@+id/info_icon"
        android:tag="binding_3"
        android:padding="@dimen/default_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/more_information"
        app:layout_constraintBottom_toBottomOf="@+id/current_step"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/current_step"/>
</androidx.constraintlayout.widget.ConstraintLayout>
