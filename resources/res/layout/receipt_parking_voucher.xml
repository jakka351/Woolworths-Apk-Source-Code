<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootContainer"
    android:tag="layout/receipt_parking_voucher_0"
    android:background="@color/sng_window_background"
    android:padding="@dimen/sng_general_spacing"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/sng_small_general_spacing"
    android:layout_marginBottom="@dimen/sng_general_spacing"
    android:layout_marginStart="@dimen/sng_receipt_general_spacing"
    android:layout_marginEnd="@dimen/sng_receipt_general_spacing">
    <TextView
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/sng_charcoal"
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sng_receipt_parking_voucher_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/sng_charcoal"
        android:id="@+id/txtInstruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sng_receipt_parking_voucher_instruction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/sectionBarcode"
        android:background="@android:color/white"
        android:padding="@dimen/sng_general_spacing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sng_spacing_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtInstruction">
        <au.com.woolworths.foundation.barcode.ui.BarcodeView
            android:id="@+id/posBarcode"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/sng_full_black"
            android:id="@+id/txtBarcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sng_spacing_small"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
