<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/activity_collection_mode_setup_0"
    android:background="@color/light_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/onboarding_collection_mode_title"
            style="@style/Widget.Wow.Toolbar"/>
    </com.google.android.material.appbar.AppBarLayout>
    <au.com.woolworths.android.onesite.modules.onboarding.stepper.StepperView
        android:id="@+id/stepper_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/shopping_mode_lottie_animation_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/onboarding_mode_animation_size"
        app:layout_constraintBottom_toTopOf="@+id/choose_mode_text_view"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stepper_view"
        app:layout_constraintVertical_chainStyle="packed"
        app:lottie_autoPlay="true"
        app:lottie_fileName="mode_collect_animation.json"
        app:lottie_loop="true"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Body.Medium"
        android:id="@+id/choose_mode_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:text="@string/onboarding_collection_mode_selector_title"
        app:layout_constraintBottom_toTopOf="@+id/instructions_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shopping_mode_lottie_animation_view"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Caption"
        android:textColor="?android:attr/textColorSecondary"
        android:gravity="center"
        android:id="@+id/instructions_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_default_margin"
        android:layout_marginBottom="@dimen/onboarding_mode_divider_margin"
        android:text="@string/onboarding_collection_mode_selector_description"
        app:layout_constraintBottom_toTopOf="@+id/mode_top_divider_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose_mode_text_view"/>
    <include
        android:id="@+id/mode_top_divider_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/pick_up_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instructions_text_view"
        layout="@layout/include_horizontal_divider"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Subtitle2"
        android:textColor="@color/subtitle_text_selector"
        android:gravity="center_vertical"
        android:id="@+id/pick_up_text_view"
        android:tag="binding_1"
        android:background="@drawable/clickable_white_background_with_ripple"
        android:paddingTop="@dimen/default_margin"
        android:paddingBottom="@dimen/default_margin"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pick_up"
        android:drawablePadding="@dimen/half_default_margin"
        android:paddingStart="@dimen/default_margin"
        app:drawableStartCompat="0x7f0803c5"
        app:layout_constraintBottom_toTopOf="@+id/delivery_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mode_top_divider_view"/>
    <include
        android:id="@+id/pick_up_divider_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/pick_up_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        layout="@layout/include_horizontal_divider"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Subtitle2"
        android:textColor="@color/subtitle_text_selector"
        android:gravity="center_vertical"
        android:id="@+id/delivery_text_view"
        android:tag="binding_2"
        android:background="@drawable/clickable_white_background_with_ripple"
        android:paddingTop="@dimen/default_margin"
        android:paddingBottom="@dimen/default_margin"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/delivery"
        android:drawablePadding="@dimen/half_default_margin"
        android:paddingStart="@dimen/default_margin"
        app:drawableStartCompat="0x7f0803c3"
        app:layout_constraintBottom_toTopOf="@+id/in_store_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pick_up_text_view"/>
    <include
        android:id="@+id/delivery_divider_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        app:layout_constraintBottom_toBottomOf="@+id/delivery_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        layout="@layout/include_horizontal_divider"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Subtitle2"
        android:textColor="@color/subtitle_text_selector"
        android:gravity="center_vertical"
        android:id="@+id/in_store_text_view"
        android:tag="binding_3"
        android:background="@drawable/clickable_white_background_with_ripple"
        android:paddingTop="@dimen/default_margin"
        android:paddingBottom="@dimen/default_margin"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/in_store"
        android:drawablePadding="@dimen/half_default_margin"
        android:paddingStart="@dimen/default_margin"
        app:drawableStartCompat="0x7f0803c4"
        app:layout_constraintBottom_toTopOf="@+id/mode_bottom_divider_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delivery_text_view"/>
    <include
        android:id="@+id/mode_bottom_divider_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/in_store_text_view"
        layout="@layout/include_horizontal_divider"/>
</androidx.constraintlayout.widget.ConstraintLayout>
