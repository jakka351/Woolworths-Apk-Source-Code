<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="6dp">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/bubble"
        android:background="@drawable/sc_pick_status_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/iconContainer"
            android:layout_width="0dp"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/iconBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sc_pick_status_icon_background"
                android:contentDescription="@null"/>
            <ImageView
                android:id="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sc_pick_status_icon"
                android:contentDescription="@null"/>
        </FrameLayout>
        <TextView
            android:textColor="#121619"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:id="@+id/text"
            android:scrollbars="none"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:lines="1"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-1dp"
        android:src="@drawable/sc_pick_status_arrow"
        android:layout_below="@+id/bubble"
        android:contentDescription="@null"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
