<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/activity_terms_conditions_sng_0"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/layout_dark_toolbar"/>
    <RelativeLayout
        android:background="@color/sng_window_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_toolbar">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sectionAgreement"
            android:background="@android:color/white"
            android:padding="@dimen/sng_general_spacing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <CheckBox
                android:id="@+id/chkTnc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/lblAgreeTnc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sng_label_agree_tnc"
                android:layout_marginStart="@dimen/sng_general_spacing"
                app:layout_constraintBottom_toBottomOf="@+id/chkTnc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/chkTnc"
                app:layout_constraintTop_toTopOf="@+id/chkTnc"/>
            <CheckBox
                android:id="@+id/chkPolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sng_spacing_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chkTnc"/>
            <TextView
                android:id="@+id/lblPrivacy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sng_label_agree_privacy"
                android:layout_marginStart="@dimen/sng_general_spacing"
                app:layout_constraintBottom_toBottomOf="@+id/chkPolicy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/chkPolicy"
                app:layout_constraintTop_toTopOf="@+id/chkPolicy"/>
            <Button
                android:enabled="false"
                android:id="@+id/btnTnCAgree"
                android:padding="@dimen/sng_spacing_extra"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sng_spacing_small"
                android:text="@string/sng_label_tnc_agree"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblPrivacy"
                style="@style/DefaultButtonStyle"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <WebView
            android:id="@+id/webViewTermsNConditions"
            android:background="@color/sng_window_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/sng_general_spacing"
            android:layout_above="@+id/sectionAgreement"/>
        <View
            android:background="@color/sng_window_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sng_line_height"
            android:layout_above="@+id/sectionAgreement"/>
    </RelativeLayout>
</RelativeLayout>
