<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/rewards_balance_circle_indicator_0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/balance_progress_bar"
        android:layout_width="@dimen/rewards_balance_circle_indicator_size"
        android:layout_height="@dimen/rewards_balance_circle_indicator_size"
        android:indeterminate="false"
        android:progressDrawable="@drawable/rewards_balance_circle_indicator"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
    <Space
        android:id="@+id/circle_top_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_quarter_margin"
        app:layout_constraintEnd_toEndOf="@+id/balance_progress_bar"
        app:layout_constraintStart_toStartOf="@+id/balance_progress_bar"
        app:layout_constraintTop_toTopOf="@+id/balance_progress_bar"/>
    <ImageView
        android:textAppearance="@style/TextAppearance.Caption"
        android:id="@+id/status_mark"
        android:tag="binding_1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toTopOf="@+id/circle_top_center"
        app:layout_constraintEnd_toEndOf="@+id/balance_progress_bar"
        app:layout_constraintStart_toStartOf="@+id/balance_progress_bar"
        app:layout_constraintTop_toTopOf="@+id/circle_top_center"/>
    <TextView
        android:textAppearance="@style/TextAppearance.H6.Fresh.Medium"
        android:id="@+id/point_amount_text_view"
        android:tag="binding_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rewards_balance_not_set"
        app:layout_constraintBottom_toBottomOf="@+id/space"
        app:layout_constraintEnd_toEndOf="@+id/balance_progress_bar"
        app:layout_constraintStart_toStartOf="@+id/balance_progress_bar"
        app:layout_constraintTop_toTopOf="@+id/balance_progress_bar"/>
    <Space
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        app:layout_constraintBottom_toTopOf="@+id/points_text_view"
        app:layout_constraintEnd_toEndOf="@+id/balance_progress_bar"
        app:layout_constraintStart_toStartOf="@+id/balance_progress_bar"
        app:layout_constraintTop_toBottomOf="@+id/point_amount_text_view"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Caption"
        android:id="@+id/points_text_view"
        android:tag="binding_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@+id/balance_progress_bar"
        app:layout_constraintEnd_toEndOf="@+id/balance_progress_bar"
        app:layout_constraintStart_toStartOf="@+id/balance_progress_bar"
        app:layout_constraintTop_toTopOf="@+id/space"/>
</androidx.constraintlayout.widget.ConstraintLayout>
