<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:tag="layout/custom_payment_instrument_view_0"
    android:background="@color/white_color"
    android:padding="@dimen/sng_spacing_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:animateLayoutChanges="true">
    <ImageView
        android:id="@+id/instrumentIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="0x7f08059c"
        android:layout_centerVertical="true"
        android:importantForAccessibility="no"
        android:layout_marginStart="16dp"/>
    <TextView
        android:id="@+id/instrumentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingStart="@dimen/sng_general_spacing"
        android:paddingEnd="@dimen/sng_general_spacing"
        android:layout_toEndOf="@+id/instrumentIcon"/>
    <TextView
        android:textSize="12sp"
        android:textColor="#eb0c00"
        android:id="@+id/card_status_warning"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sng_label_expired"
        android:layout_centerVertical="true"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_toEndOf="@+id/instrumentName"/>
    <ImageView
        android:id="@+id/imgEdit"
        android:padding="8dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/removeCard"
        android:layout_centerVertical="true"
        android:contentDescription="@string/sng_content_desc_edit_card"
        app:srcCompat="@drawable/sng_ic_edit_green_24dp"/>
    <ImageView
        android:id="@+id/removeCard"
        android:padding="8dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sng_ic_delete_black_24dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/sng_content_desc_delete_card"
        android:layout_marginEnd="24dp"
        android:layout_alignParentEnd="true"/>
    <RadioButton
        android:id="@+id/selectButton"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="24dp"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
