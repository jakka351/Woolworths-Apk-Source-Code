<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/epoxy_item_more_chat_to_us_0"
    android:paddingTop="@dimen/three_quarter_default_margin"
    android:paddingBottom="@dimen/three_quarter_default_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">
    <TextView
        android:textAppearance="@style/TextAppearance.Subtitle2"
        android:id="@+id/inline_label_title"
        android:tag="binding_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_margin"
        android:paddingHorizontal="@dimen/default_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/notification_unread_message"
        android:tag="binding_2"
        android:background="@drawable/ic_unread_message"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:importantForAccessibility="no"
        android:layout_marginStart="@dimen/half_default_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/inline_label_title"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
