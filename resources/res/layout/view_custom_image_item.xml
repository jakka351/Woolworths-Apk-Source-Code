<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1dp">
    <com.woolworths.scanlibrary.util.widget.SquareImageView
        android:id="@+id/itemView"
        android:padding="@dimen/sng_spacing_small"
        android:layout_width="@dimen/sng_cart_item_product_image_size"
        android:layout_height="@dimen/sng_cart_item_product_image_size"
        android:src="@drawable/sng_ic_product"
        android:scaleType="fitXY"
        android:contentDescription="@string/sng_content_desc_product_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
