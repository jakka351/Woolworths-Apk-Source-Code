<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/include_checkout_order_total_details_0"
    android:background="@android:color/transparent"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/bottom_sheet_peek_height"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:layout_insetEdge="bottom">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/inline_message_container"
        android:tag="binding_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/shadow_up"
            android:tag="binding_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_sheet_shadow_height"/>
        <include
            android:id="@+id/include_inline_message"
            android:paddingTop="@dimen/half_default_padding"
            android:paddingBottom="@dimen/half_default_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/include_inline_message"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/order_totals_details_main_layout"
        android:tag="binding_3"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/divider_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            layout="@layout/include_horizontal_divider"/>
        <ImageButton
            android:id="@+id/expand_image_button"
            android:tag="binding_4"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/half_default_margin"
            android:src="@drawable/ic_chevron_up_circle"
            android:importantForAccessibility="no"
            android:layout_marginHorizontal="@dimen/three_quarter_default_margin"
            app:layout_constraintBottom_toBottomOf="@+id/value_text_view"
            app:layout_constraintEnd_toStartOf="@+id/title_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#3a474e"/>
        <TextView
            android:id="@+id/title_text_view"
            android:tag="binding_5"
            android:paddingTop="@dimen/three_quarter_default_padding"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/value_text_view"
            app:layout_constraintEnd_toStartOf="@+id/button_guideline"
            app:layout_constraintStart_toEndOf="@+id/expand_image_button"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textAppearance="@style/TextAppearance.H6.Medium"
            android:id="@+id/value_text_view"
            android:tag="binding_6"
            android:paddingBottom="@dimen/quarter_default_padding"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/breakdown_guideline"
            app:layout_constraintEnd_toEndOf="@+id/title_text_view"
            app:layout_constraintStart_toStartOf="@+id/title_text_view"
            app:layout_constraintTop_toBottomOf="@+id/title_text_view"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/button_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.5"/>
        <Button
            android:tag="binding_7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/three_quarter_default_margin"
            android:layout_marginTop="@dimen/three_quarter_default_margin"
            android:layout_marginRight="@dimen/three_quarter_default_margin"
            android:layout_marginBottom="@dimen/quarter_default_margin"
            app:layout_constraintBottom_toBottomOf="@+id/breakdown_guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_guideline"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:id="@+id/breakdown_guideline"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.airbnb.epoxy.EpoxyRecyclerView
        android:id="@+id/totals_recycler_view"
        android:background="@color/white"
        android:paddingBottom="@dimen/half_default_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
</LinearLayout>
