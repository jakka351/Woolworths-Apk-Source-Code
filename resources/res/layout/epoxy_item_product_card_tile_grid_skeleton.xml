        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skeleton_title"/>
    <View
        android:id="@+id/skeleton_price"
        android:background="@drawable/background_skeleton_box_small_radius"
        android:layout_width="70dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skeleton_subtitle"/>
    <View
        android:background="@drawable/background_skeleton_box_large_radius"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginTop="51dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skeleton_price"/>
