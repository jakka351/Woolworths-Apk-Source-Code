<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/productView"
    android:tag="layout/item_search_result_sng_0"
    android:background="@color/white_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">
    <ImageView
        android:id="@+id/imgPromotionBadge"
        android:visibility="gone"
        android:layout_width="47dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:src="0x7f0805b5"
        android:contentDescription="@string/sng_content_description_promo_label"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/product_location"
        android:tag="binding_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:textAlignment="textStart"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_marginStart="8dp"
        android:layout_alignParentEnd="true"
        app:layout_constraintStart_toEndOf="@+id/productImage"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/storeLocation"/>
    <com.woolworths.scanlibrary.util.widget.SquareImageView
        android:id="@+id/productImage"
        android:tag="binding_2"
        android:padding="@dimen/sng_spacing_small"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/sng_content_desc_product_image"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/txtProductName"
        android:tag="binding_3"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="28dp"
        android:layout_alignParentBottom="true"
        android:textAlignment="textStart"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgPromotionBadge"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/productImage"
        app:layout_constraintTop_toBottomOf="@+id/product_location"
        style="@style/H5"/>
    <com.woolworths.scanlibrary.util.widget.PriceView
        android:id="@+id/itemPrice"
        android:tag="binding_4"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/productImage"
        app:layout_constraintTop_toBottomOf="@+id/txtProductName"
        app:textSize="26sp"
        app:topMargin="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
