<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/stateful_button_checked_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/checked_state_fill"
        android:background="@drawable/rounded_corners_layout_highlight"
        android:layout_width="0dp"
        android:layout_height="@dimen/stateful_button_checked_height"
        android:layout_marginTop="@dimen/stateful_button_checked_margin_vertical"
        android:layout_marginBottom="@dimen/stateful_button_checked_margin_vertical"
        android:alpha="0.06"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/checked_state_background"
        android:background="@drawable/rounded_corners_layout_outlined"
        android:layout_width="0dp"
        android:layout_height="@dimen/stateful_button_checked_height"
        android:layout_marginTop="@dimen/stateful_button_checked_margin_vertical"
        android:layout_marginBottom="@dimen/stateful_button_checked_margin_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/checked_state_icon"
        android:layout_width="@dimen/stateful_button_icon_size"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:importantForAccessibility="no"
        android:layout_marginEnd="@dimen/half_default_margin"
        app:layout_constraintBottom_toBottomOf="@+id/checked_state_background"
        app:layout_constraintEnd_toStartOf="@+id/checked_state_text"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/checked_state_background"
        app:layout_constraintTop_toTopOf="@+id/checked_state_background"
        app:srcCompat="@drawable/ic_checked_tick"/>
    <TextView
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:gravity="center"
        android:id="@+id/checked_state_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="@+id/checked_state_background"
        app:layout_constraintEnd_toEndOf="@+id/checked_state_background"
        app:layout_constraintStart_toEndOf="@+id/checked_state_icon"
        app:layout_constraintTop_toTopOf="@+id/checked_state_background"/>
</androidx.constraintlayout.widget.ConstraintLayout>
