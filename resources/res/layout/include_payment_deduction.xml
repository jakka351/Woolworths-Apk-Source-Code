<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/payingWrapperLinearLayout"
    android:tag="layout/include_payment_deduction_0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/smallest_text_size"
        android:id="@+id/paymentDeductionLabelTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/paying_message"/>
    <TextView
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/paymentDeductionValueTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/fresh_sans_medium"/>
</LinearLayout>
