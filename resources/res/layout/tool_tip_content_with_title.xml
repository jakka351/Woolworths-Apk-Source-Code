<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/tool_tip_content_with_title_0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/icon"
        android:tag="binding_1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/three_quarter_default_margin"
        android:importantForAccessibility="no"
        android:layout_marginStart="@dimen/three_quarter_default_margin"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Subtitle2.Medium"
        android:id="@+id/title_text_view"
        android:tag="binding_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/three_quarter_default_padding"
        android:layout_toRightOf="@+id/icon"
        android:paddingStart="@dimen/three_quarter_default_padding"
        android:layout_marginEnd="@dimen/three_quarter_default_padding"/>
    <TextView
        android:id="@+id/description_text_view"
        android:paddingTop="@dimen/quarter_default_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon"
        android:layout_below="@+id/title_text_view"
        android:paddingStart="@dimen/three_quarter_default_padding"
        android:layout_marginEnd="@dimen/three_quarter_default_padding"/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_below="@+id/description_text_view"/>
    <Button
        android:id="@+id/cta_button"
        android:tag="binding_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_text_view"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/quarter_default_padding"
        style="@style/Button.Primary.Flat"/>
</RelativeLayout>
