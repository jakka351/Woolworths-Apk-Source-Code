<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:importantForAccessibility="yes">
    <ViewStub
        android:id="@+id/product_image_carousel"
        android:inflatedId="@+id/product_image_carousel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:accessibilityTraversalAfter="@+id/product_heading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ViewStub
        android:id="@+id/product_badge_image"
        android:inflatedId="@+id/product_badge_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ViewStub
        android:id="@+id/product_heading"
        android:inflatedId="@+id/product_heading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_image_carousel"/>
</androidx.constraintlayout.widget.ConstraintLayout>
