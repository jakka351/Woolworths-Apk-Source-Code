<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/epoxy_item_your_groceries_skeleton_info_tile_0"
    android:background="?attr/colorSurface"
    android:padding="@dimen/default_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/thumbnail"
        android:background="@drawable/background_skeleton_box_small_radius"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/title"
        android:background="@drawable/background_skeleton_box_small_radius"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/half_default_margin"
        app:layout_constraintEnd_toStartOf="@+id/price"
        app:layout_constraintStart_toEndOf="@+id/thumbnail"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/description"
        android:background="@drawable/background_skeleton_box_small_radius"
        android:layout_width="96dp"
        android:layout_height="12dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="@dimen/half_default_margin"
        android:layout_marginBottom="@dimen/half_default_margin"
        app:layout_constraintStart_toEndOf="@+id/thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/title"/>
    <View
        android:id="@+id/quantity_title"
        android:background="@drawable/background_skeleton_box_small_radius"
        android:layout_width="40dp"
        android:layout_height="12dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="@dimen/half_default_margin"
        app:layout_constraintStart_toEndOf="@+id/thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/description"/>
    <View
        android:id="@+id/quantity"
        android:background="@drawable/background_skeleton_box_small_radius"
        android:layout_width="78dp"
        android:layout_height="16dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="@dimen/half_default_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/quantity_title"/>
    <View
        android:id="@+id/price"
        android:background="@drawable/background_skeleton_box_small_radius"
        android:layout_width="36dp"
        android:layout_height="16dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/title"
        app:layout_constraintTop_toTopOf="@+id/quantity"
        app:layout_constraintVertical_bias="0"/>
</androidx.constraintlayout.widget.ConstraintLayout>
