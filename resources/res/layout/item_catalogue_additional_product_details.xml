<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/item_catalogue_additional_product_details_0"
    android:background="?attr/selectableItemBackground"
    android:padding="@dimen/default_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/store_icon_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.24"/>
    <ImageView
        android:id="@+id/product_icon_image_view"
        android:tag="binding_1"
        android:background="@color/color_black_100"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:importantForAccessibility="no"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/store_icon_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Body.Bold"
        android:ellipsize="end"
        android:id="@+id/product_description_text_view"
        android:tag="binding_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginStart="@dimen/default_margin"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/store_icon_guideline"
        app:layout_constraintTop_toTopOf="@+id/product_icon_image_view"/>
    <Button
        android:id="@+id/product_lists_button_online"
        android:tag="binding_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_default_margin"
        android:text="@string/catalogue_product_list_lists"
        android:singleLine="true"
        android:layout_marginEnd="@dimen/half_default_margin"
        app:layout_constraintEnd_toStartOf="@+id/product_cart_button"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@+id/product_description_text_view"
        app:layout_constraintTop_toBottomOf="@+id/product_description_text_view"
        style="?attr/materialButtonOutlinedStyle"/>
    <include
        android:id="@+id/product_cart_button"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_default_margin"
        app:layout_constraintEnd_toStartOf="@+id/product_lists_button_instore"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/product_lists_button_online"
        app:layout_constraintTop_toBottomOf="@+id/product_description_text_view"
        layout="@layout/include_cart_button"/>
    <Button
        android:id="@+id/product_lists_button_instore"
        android:tag="binding_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_default_margin"
        android:text="@string/catalogue_product_list_lists"
        android:singleLine="true"
        android:layout_marginStart="@dimen/half_default_margin"
        app:layout_constraintEnd_toEndOf="@+id/product_description_text_view"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/product_cart_button"
        app:layout_constraintTop_toBottomOf="@+id/product_description_text_view"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Caption"
        android:textColor="?android:attr/textColorSecondary"
        android:tag="binding_5"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_default_margin"
        android:text="@string/catalogue_product_temporarily_out_of_stock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/product_description_text_view"
        app:layout_constraintTop_toBottomOf="@+id/product_description_text_view"/>
</androidx.constraintlayout.widget.ConstraintLayout>
