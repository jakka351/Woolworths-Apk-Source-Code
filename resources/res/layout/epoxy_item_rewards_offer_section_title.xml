<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:tag="layout/epoxy_item_rewards_offer_section_title_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/offer_button_compensation"
    android:paddingHorizontal="@dimen/default_padding">
    <TextView
        android:textAppearance="@style/TextAppearance.Subtitle2"
        android:id="@+id/title"
        android:tag="binding_1"
        android:paddingTop="@dimen/default_padding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintEnd_toStartOf="@+id/cta_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/cta_button"
        android:tag="binding_2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:letterSpacing="0.02"
        app:layout_constraintBaseline_toBaselineOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Button.Primary.Flat"/>
    <ProgressBar
        android:id="@+id/cta_spinner"
        android:tag="binding_3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/cta_button"
        app:layout_constraintEnd_toEndOf="@+id/cta_button"
        app:layout_constraintStart_toStartOf="@+id/cta_button"
        app:layout_constraintTop_toTopOf="@+id/cta_button"
        style="?android:attr/progressBarStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
