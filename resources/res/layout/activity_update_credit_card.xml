<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/rootContainer"
    android:tag="layout/activity_update_credit_card_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_dark_toolbar"/>
    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/sectionCardHolder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:elevation="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="@dimen/sng_general_spacing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sng_ic_credit_card"
                        android:importantForAccessibility="no"/>
                    <TextView
                        android:paddingTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sng_label_card"
                        android:paddingStart="@dimen/sng_spacing_small"
                        android:paddingEnd="@dimen/sng_spacing_small"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/sectionEditCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sng_general_spacing"
                android:layout_marginBottom="@dimen/sng_spacing_small"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sectionCardHolder">
                <LinearLayout
                    android:orientation="vertical"
                    android:tag="binding_1"
                    android:background="@drawable/sng_background_error_rounded_border"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true">
                    <include
                        android:id="@+id/sectionCardError"
                        layout="@layout/view_addcard_error"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp">
                        <ImageView
                            android:id="@+id/imgCardScheme"
                            android:layout_width="64dp"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:layout_centerVertical="true"/>
                        <View
                            android:id="@+id/divider"
                            android:background="@color/sng_view_separator"
                            android:layout_width="@dimen/sng_border_thickness"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/imgCardScheme"/>
                        <TextView
                            android:id="@+id/txtMaskedPan"
                            android:tag="binding_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_toRightOf="@+id/divider"
                            android:layout_alignParentTop="true"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            style="@style/H7"/>
                        <TextView
                            android:textSize="12sp"
                            android:textColor="@color/sng_secondary_text_color"
                            android:id="@+id/txtExpiration"
                            android:tag="binding_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_toRightOf="@+id/divider"
                            android:layout_alignParentBottom="true"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            style="@style/H7"/>
                    </RelativeLayout>
                    <View
                        android:background="@color/sng_checkout_error_border"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sng_border_thickness"
                        android:layout_marginBottom="8dp"/>
                    <com.woolworths.scanlibrary.util.widget.UpdateCreditCardExpirationView
                        android:id="@+id/updateCreditCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>
