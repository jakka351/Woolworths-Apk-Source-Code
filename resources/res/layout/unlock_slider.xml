<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/slider_background"
        android:tag="layout/unlock_slider_0"
        android:background="@drawable/unlock_slider_background"
        android:layout_width="0dp"
        android:layout_height="@dimen/unlock_slider_height"
        android:layout_margin="@dimen/quarter_default_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Body.Medium"
        android:textColor="?android:attr/textColorSecondary"
        android:gravity="center"
        android:tag="layout/unlock_slider_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textAllCaps="true"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@+id/slider_background"
        app:layout_constraintLeft_toLeftOf="@+id/slider_background"
        app:layout_constraintRight_toRightOf="@+id/slider_background"
        app:layout_constraintTop_toTopOf="@+id/slider_background"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/slider_button"
        android:tag="layout/unlock_slider_2"
        android:background="@drawable/unlock_slider_button"
        android:layout_width="@dimen/unlock_slider_button_height"
        android:layout_height="@dimen/unlock_slider_button_height"
        android:layout_margin="4dp"
        android:foreground="@drawable/unlock_slider_button_background_selector"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/slider_background"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="@+id/slider_background"
        app:layout_constraintRight_toRightOf="@+id/slider_background"
        app:layout_constraintTop_toTopOf="@+id/slider_background">
        <Space
            android:id="@+id/slider_button_drag_area"
            android:layout_width="@dimen/unlock_slider_button_height"
            android:layout_height="@dimen/unlock_slider_button_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <Space
            android:id="@+id/slider_button_text_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/icon"
            android:tag="binding_3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="center"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="@+id/slider_button_drag_area"
            app:layout_constraintLeft_toLeftOf="@+id/slider_button_drag_area"
            app:layout_constraintRight_toRightOf="@+id/slider_button_drag_area"
            app:layout_constraintTop_toTopOf="@+id/slider_button_drag_area"/>
        <ProgressBar
            android:id="@+id/progress_bar"
            android:tag="binding_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:indeterminateTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/slider_button_drag_area"
            app:layout_constraintLeft_toLeftOf="@+id/slider_button_drag_area"
            app:layout_constraintRight_toRightOf="@+id/slider_button_drag_area"
            app:layout_constraintTop_toTopOf="@+id/slider_button_drag_area"
            style="?android:attr/progressBarStyleSmall"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Body.Medium"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/slider_button_text"
            android:tag="binding_5"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textAllCaps="true"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="@+id/slider_button_text_center"
            app:layout_constraintLeft_toLeftOf="@+id/slider_button_text_center"
            app:layout_constraintRight_toRightOf="@+id/slider_button_text_center"
            app:layout_constraintTop_toTopOf="@+id/slider_button_text_center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
