<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/activity_onboarding_add_card_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_dark_toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">
            <RelativeLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:id="@+id/no_payment_card_warning"
                android:background="@drawable/sng_background_checkout_warning_no_rounded_default_sng"
                android:padding="16dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageview_add_card_error"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@null"
                    android:importantForAccessibility="no"
                    android:layout_alignParentStart="true"
                    app:srcCompat="@drawable/sng_ic_infobar_warning"/>
                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/sng_checkout_error_title"
                    android:gravity="center_vertical"
                    android:id="@+id/txtErrorHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sng_label_payment_method_required"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/imageview_add_card_error"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/sng_checkout_error_title"
                    android:gravity="center_vertical"
                    android:id="@+id/txtErrorBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/sng_error_msg_payment_card_required"
                    android:layout_below="@+id/txtErrorHeader"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/sng_spacing_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true">
                <TextView
                    android:id="@+id/add_payment_card_info_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sng_spacing_small"
                    android:text="@string/sng_label_add_paymentmethod_instruction"
                    android:textAlignment="textStart"
                    style="@style/H5"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sng_spacing_small">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/sng_general_spacing"
                        android:paddingTop="@dimen/sng_general_spacing"
                        android:paddingRight="@dimen/sng_general_spacing"
                        android:paddingBottom="@dimen/sng_general_spacing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/sng_ic_credit_card"
                            android:importantForAccessibility="no"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sng_label_card"
                            android:paddingStart="@dimen/sng_spacing_small"
                            android:paddingEnd="@dimen/sng_spacing_small"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sng_spacing_small"
                    android:layout_marginTop="@dimen/sng_general_spacing"
                    android:layout_marginRight="@dimen/sng_spacing_small"
                    android:layout_marginBottom="@dimen/sng_spacing_small"
                    app:cardCornerRadius="4dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:tag="binding_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true">
                        <include
                            android:id="@+id/sectionCardError"
                            layout="@layout/view_addcard_error"/>
                        <com.woolworths.scanlibrary.util.widget.AddCreditCardView
                            android:id="@+id/addCreditCardView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
