<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/epoxy_item_store_locator_location_0"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/store_icon_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.18"/>
    <ImageView
        android:id="@+id/shop_icon_image_view"
        android:tag="binding_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:contentDescription="@string/pickup_store_locator_store_image"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="@+id/store_icon_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textColor="?android:attr/textColorSecondary"
        android:ellipsize="end"
        android:id="@+id/shop_distance_text_view"
        android:tag="binding_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginEnd="@dimen/default_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Subtitle2"
        android:ellipsize="end"
        android:id="@+id/shop_name_text_view"
        android:tag="binding_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding"
        android:maxLines="2"
        android:layout_marginEnd="@dimen/default_margin"
        app:layout_constraintBottom_toTopOf="@+id/shop_address_text_view"
        app:layout_constraintEnd_toStartOf="@+id/shop_distance_text_view"
        app:layout_constraintStart_toEndOf="@+id/store_icon_guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:textColor="?android:attr/textColorSecondary"
        android:ellipsize="end"
        android:id="@+id/shop_address_text_view"
        android:tag="binding_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginEnd="@dimen/default_margin"
        app:layout_constraintBottom_toTopOf="@+id/shop_pickup_method_text_view"
        app:layout_constraintEnd_toStartOf="@+id/shop_distance_text_view"
        app:layout_constraintStart_toEndOf="@+id/store_icon_guideline"
        app:layout_constraintTop_toBottomOf="@+id/shop_name_text_view"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_goneMarginBottom="@dimen/three_quarter_default_margin"/>
    <TextView
        android:textColor="?attr/colorSecondary"
        android:ellipsize="end"
        android:id="@+id/shop_pickup_method_text_view"
        android:tag="binding_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_quarter_margin"
        android:layout_marginBottom="@dimen/three_quarter_default_margin"
        android:lineSpacingExtra="@dimen/quarter_default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/shop_distance_text_view"
        app:layout_constraintStart_toEndOf="@+id/store_icon_guideline"
        app:layout_constraintTop_toBottomOf="@+id/shop_address_text_view"
        app:layout_constraintVertical_chainStyle="packed"/>
</androidx.constraintlayout.widget.ConstraintLayout>
