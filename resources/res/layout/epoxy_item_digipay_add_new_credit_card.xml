<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/epoxy_item_digipay_add_new_credit_card_0"
    android:background="@drawable/digipay_outlined_background"
    android:padding="@dimen/default_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/default_margin">
    <include
        android:id="@+id/credit_card_inline_error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/include_inset_banner"/>
    <TextView
        android:id="@+id/payment_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:text="@string/digipay_credit_card_payment_label"
        app:layout_constraintEnd_toStartOf="@+id/price"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/credit_card_inline_error"
        app:layout_goneMarginTop="0dp"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Body.Medium"
        android:id="@+id/price"
        android:tag="binding_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/payment_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/payment_label"
        app:layout_constraintTop_toTopOf="@+id/payment_label"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Caption"
        android:textColor="?android:attr/textColorSecondary"
        android:id="@+id/price_caption"
        android:tag="binding_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/card_capture_container"
        app:layout_constraintEnd_toEndOf="@+id/price"
        app:layout_constraintTop_toBottomOf="@+id/price"/>
    <FrameLayout
        android:id="@+id/card_capture_container"
        android:layout_width="0dp"
        android:layout_height="155dp"
        android:layout_marginTop="@dimen/half_default_margin"
        app:layout_constraintBottom_toTopOf="@+id/save_credit_card_for_later_checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_caption"/>
    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/save_credit_card_for_later_checkbox"
        android:tag="binding_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/digipay_save_card_for_later"
        app:layout_constraintEnd_toStartOf="@+id/clear_credit_card_form"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_capture_container"/>
    <Button
        android:id="@+id/clear_credit_card_form"
        android:tag="binding_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/digipay_clear_credit_card_form"
        app:layout_constraintBottom_toBottomOf="@+id/save_credit_card_for_later_checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/save_credit_card_for_later_checkbox"
        app:layout_constraintTop_toTopOf="@+id/save_credit_card_for_later_checkbox"
        style="@style/Button.Primary.Flat"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/top_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="clear_credit_card_form, save_credit_card_for_later_checkbox"/>
    <ImageView
        android:id="@+id/visa_icon"
        android:tag="binding_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:src="@drawable/ic_digipay_method_visa"
        android:contentDescription="@string/visa_accepted"
        android:layout_marginEnd="@dimen/default_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mastercard_icon"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_barrier"/>
    <ImageView
        android:id="@+id/mastercard_icon"
        android:tag="binding_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_digipay_method_mastercard"
        android:contentDescription="@string/mastercard_accepted"
        android:layout_marginEnd="@dimen/default_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/amex_icon"
        app:layout_constraintStart_toEndOf="@+id/visa_icon"/>
    <ImageView
        android:id="@+id/amex_icon"
        android:tag="binding_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_digipay_method_amex"
        android:contentDescription="@string/amex_accepted"
        android:layout_marginEnd="@dimen/default_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/diners_icon"
        app:layout_constraintStart_toEndOf="@+id/mastercard_icon"/>
    <ImageView
        android:id="@+id/diners_icon"
        android:tag="binding_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_digipay_method_diners"
        android:contentDescription="@string/diners_accepted"
        android:layout_marginEnd="@dimen/default_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/jcb_icon"
        app:layout_constraintStart_toEndOf="@+id/amex_icon"/>
    <ImageView
        android:id="@+id/jcb_icon"
        android:tag="binding_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_digipay_method_jcb"
        android:contentDescription="@string/jcb_accepted"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/diners_icon"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/content"
        android:tag="binding_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="price,payment_label,card_capture_container,save_credit_card_for_later_checkbox,clear_credit_card_form,top_barrier, price_caption"/>
    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/loading"
        android:tag="binding_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?android:attr/progressBarStyle"/>
    <include
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/include_digipay_card_capture_error_state"/>
</androidx.constraintlayout.widget.ConstraintLayout>
