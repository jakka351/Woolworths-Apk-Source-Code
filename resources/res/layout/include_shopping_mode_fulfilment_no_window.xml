<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/include_shopping_mode_fulfilment_no_window_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/quarter_default_margin">
    <include
        android:id="@+id/select_window_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        app:layout_constraintBottom_toTopOf="@+id/delivery_now_banner_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/epoxy_item_button"/>
    <include
        android:id="@+id/delivery_now_banner_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_default_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_window_vertical"
        layout="@layout/include_shopping_mode_dn_banner"/>
    <include
        android:id="@+id/select_window_horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/quarter_default_margin"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/delivery_now_banner_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="@dimen/default_margin"
        layout="@layout/epoxy_item_button"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/delivery_now_banner_horizontal"
        android:tag="binding_1"
        android:background="@drawable/shape_rounded_corners"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_marginStart="@dimen/quarter_default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:backgroundTint="?attr/colorBrandFillPrimary"
        android:layout_marginVertical="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/select_window_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/select_window_horizontal"
        app:layout_constraintTop_toTopOf="@+id/select_window_horizontal"
        app:layout_constraintWidth_percent="0.4"
        app:lottie_autoPlay="true"
        app:lottie_fileName="delivery_now_animation.json"
        app:lottie_loop="true"/>
</androidx.constraintlayout.widget.ConstraintLayout>
